<!DOCTYPE html>
<html>
  <head>
    <title>CourierService</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <ul>
      <% if user_signed_in? %>
        <li><a href="/">Home</a></li>
        <li><a href="/search">Search Orders</a></li>
        <li><a href="/parcels">Parcels</a></li>
        <% if current_user.present? && current_user.is_admin? %>
        <li><a href="/parcel_export_files">Export Excels</a></li>
        <% end %>
        <li><a href="/users">Manage Users</a></li> 
        <li><a href="/service_types">Service Types</a></li>
        <li><%= link_to 'Sign out', destroy_user_session_path , method: :delete %></li>
      <% else %>
        <li><a href="/search">Search Orders</a></li>
        <li><%= link_to 'Sign in', new_user_session_path %></li>
      <% end %>
    </ul>
    <% if current_user.present? %>
    <h3>Current User :- <%= current_user.name  %></h3>
    <% end %>
    <!-- 
    <p class="notice"><%#= notice %></p>
    <p class="alert"><%#= alert %></p> -->
   
    <%= yield %>
  </body>
</html>
